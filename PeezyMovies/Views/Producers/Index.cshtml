@model IEnumerable<ProducerViewModel>

@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                                <th>Actions</th>
                    }
                    </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                    <tr>
                     <td class="align-middle">
                         <img class="rounded-circle" src="@item.ImageUrl" alt="@item.FullName" style="max-width: 150px" />
                     </td>
                     <td class="align-middle">
                     @Html.DisplayFor(modelItem => item.FullName)
                     </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                        }
                  </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@if (User.IsInRole("Admin") && this.User.Identity.IsAuthenticated)
{
     <div class="text-white">
        <a asp-controller="Producers" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New</a>
    </div>
}