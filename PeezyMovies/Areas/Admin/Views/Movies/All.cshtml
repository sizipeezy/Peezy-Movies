@model IEnumerable<MovieViewModel>

@{
    ViewBag.Title = "Movies";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Rating</th>
            <th scope="col">Genre</th>
            <th scope="col">Price</th>
            <th scope="col">Deleted</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td scope="col">@movie.Id</td>
                <td scope="col">@movie.Title</td>
                <td scope="col">@String.Format("{0:f2}", movie.Rating)</td>
                <td scope="col">@movie.Genre</td>
                <td scope="col">@String.Format("{0:f2}", movie.Price) BGN</td>
                <td>
                    @if (@movie.IsDeleted != false)
                    {
                        <label>✔</label>
                    }
                    else
                    {
                       <label class="text-center">❌</label>
                    }
                </td>

                <td scope="col">
                    <a asp-area="Admin" asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a asp-area="Admin" asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="Admin" asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary float-right ml-3">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>